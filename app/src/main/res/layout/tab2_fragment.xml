<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fadeScrollbars="false"
    android:scrollbarThumbVertical="@color/scroll_bar"
    android:background="#FFFFFF">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="UselessParent"
    android:scrollbarThumbVertical="@color/scroll_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        tools:ignore="UselessParent"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/withtemim_icon"/>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:text="@string/withtemim_txt"
            android:textColor="#363636"
            android:textSize="20sp" />

        <Button
            android:id="@+id/idWithTemimApp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_cancel"
            android:text="تحميل مجاني"
            android:textColor="#4CAF50"
            android:textSize="25sp"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>

</RelativeLayout>